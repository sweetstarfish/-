<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cjdx.supermarket.mapper.RoleMapper">

    <select id="selectAllRoles" resultType="com.cjdx.supermarket.entity.Role">
        SELECT * FROM smbms_role ORDER BY id
    </select>

    <select id="selectRoleById" resultType="com.cjdx.supermarket.entity.Role">
        SELECT * FROM smbms_role WHERE id = #{id}
    </select>

</mapper>